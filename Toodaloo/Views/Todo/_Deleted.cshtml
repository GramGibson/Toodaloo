@model Toodaloo.Models.Todo

@if (Model.Complete) {
	<text>
	$('#completed_todo_@Model.Id').slideUp(200, function() {
		$(this).remove();
	})
	</text>
}
else {
	<text>
	$('#todo_@Model.Id').slideUp(200, function() {
		$(this).remove();
		if ($('#todos').children().length == 0) {
			$('#todos').append('@Html.Partial("_EmptyTodo")');
		}
	})
	</text>
}